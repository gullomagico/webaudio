---
import '../main.css';
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-900">
	<Layout title="404 Not found - WebAudio" description="The page you are looking for does not exist.">
		<main class="m-auto p-6 select-none">
			<h1 class="text-4xl font-bold text-center text-gradient">&lt;404 Not found /&gt;</h1>
			<p class="text-center text-gray-400 mt-5">The page you are looking for does not exist.</p>
			<ul class="max-w-xs text-center mx-auto mt-10">
				<Card href={`${import.meta.env.BASE_URL}`} title="Home" body="Go back to the home page." />
			</ul>
		</main>
	</Layout>
</html>
